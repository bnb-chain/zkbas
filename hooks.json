[
  {
    "id": "pull-and-build",
    "execute-command": "<PATH>",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "release.tag_name"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "<Secret>",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "published",
            "parameter":
            {
              "source": "payload",
              "name": "action"
            }
          }
        }
      ]
    }
  }
]